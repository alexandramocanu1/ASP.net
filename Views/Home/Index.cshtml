@{
    Layout = "_Layout";
}

<h2>My Trips</h2>

@if (Model != null && Model.Any())
{
    <ul>
        @foreach (var trip in Model)
        {
            <li>@trip.TravelDate.ToShortDateString() - @trip.Accommodation - Total Cost: @trip.CalculateTotalCost()</li>
        }
    </ul>
}
else
{
    <p>No trips available.</p>
}

<p><a asp-controller="Home" asp-action="AddTrip">Add a new trip</a></p>
